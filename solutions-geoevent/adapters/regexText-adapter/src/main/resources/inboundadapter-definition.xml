<adapter name="regexText-adapter" label="Regex Text Inbound Adapter" domain="com.esri.geoevent.solutions.adapter" type="inbound" version="10.3.0">
	<description>Capable of receiving text data in CSV (or similar) format, but with an attribute separator that can be defined by a regular expression.</description>
	<propertyDefinitions>
		<propertyDefinition propertyName="CreateUnrecognizedGeoEventDefinitions" label="${com.esri.ges.framework.adapter.text-adapter.CREATE_NEW_UNRECOGNIZED_GED_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.CREATE_NEW_UNRECOGNIZED_GED_DESC}" propertyType="Boolean" defaultValue="true" mandatory="false" readOnly="false" dependsOn="IncomingDataContainsGeoEventDefinition=true"/>
		<propertyDefinition propertyName="MessageSeparator" label="${com.esri.ges.framework.adapter.text-adapter.MESSAGE_SEPERATOR_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.MESSAGE_SEPERATOR_DESC}" propertyType="String" defaultValue="\n" mandatory="false" readOnly="false"/>
		<propertyDefinition propertyName="AttributeSeparator" label="${com.esri.ges.framework.adapter.text-adapter.ATTRIBUTE_SEPERATOR_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.ATTRIBUTE_SEPERATOR_DESC}" propertyType="String" defaultValue="," mandatory="true" readOnly="false"/>		<propertyDefinition propertyName="AttributeSeparatorToBeReplaced" label="Attribute Separator to be Replaced" description="If your attribute delimiters are more complex - for example they can be identified by a regular expression, then enter here the appropriate regular expression that will match them. For example, a value of '[^\S\n]+' would match any amount of white space (except a new line). All occurrences of this regex will be replaced by the Attribute Separator you specify, prior to further processing by the Text Adapter, so be sure that the Attribute Separator is not set to a character that is present in the data." propertyType="String" defaultValue="" mandatory="false" readOnly="false"/>
		<propertyDefinition propertyName="IncomingDataContainsGeoEventDefinition" label="${com.esri.ges.framework.adapter.text-adapter.INCOMING_DATA_CONTAINS_GED_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.INCOMING_DATA_CONTAINS_GED_DESC}" propertyType="Boolean" defaultValue="true" mandatory="false" readOnly="false"/>
		<propertyDefinition propertyName="CreateFixedGeoEventDefinitions" label="${com.esri.ges.framework.adapter.text-adapter.CREATE_NEW_GED_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.CREATE_NEW_GED_DESC}" propertyType="Boolean" defaultValue="false" mandatory="false" readOnly="false" dependsOn="IncomingDataContainsGeoEventDefinition=false"/>
		<propertyDefinition propertyName="NewFixedGeoEventDefinitionName" label="${com.esri.ges.framework.adapter.text-adapter.NEW_GED_NAME_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.NEW_GED_NAME_DESC}" propertyType="String" defaultValue="" mandatory="false" readOnly="false" dependsOn="CreateFixedGeoEventDefinitions=true"/>
		<propertyDefinition propertyName="ExistingFixedGeoEventDefinitionName" label="${com.esri.ges.framework.adapter.text-adapter.EXISTING_GED_NAME_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.EXISTING_GED_NAME_DESC}" propertyType="GeoEventDefinition" defaultValue="" mandatory="false" readOnly="false" dependsOn="CreateFixedGeoEventDefinitions=false"/>
		<propertyDefinition propertyName="BuildGeometryFromFields" label="${com.esri.ges.framework.adapter.text-adapter.BUILD_GEOMETRY_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.BUILD_GEOMETRY_DESC}" propertyType="Boolean" defaultValue="false" mandatory="false" readOnly="false"/>
		<propertyDefinition propertyName="XGeometryField" label="${com.esri.ges.framework.adapter.text-adapter.X_GEOM_FIELD_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.X_GEOM_FIELD_DESC}" propertyType="String" defaultValue="" mandatory="false" readOnly="false" dependsOn="BuildGeometryFromFields=true"/>
		<propertyDefinition propertyName="YGeometryField" label="${com.esri.ges.framework.adapter.text-adapter.Y_GEOM_FIELD_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.Y_GEOM_FIELD_DESC}" propertyType="String" defaultValue="" mandatory="false" readOnly="false" dependsOn="BuildGeometryFromFields=true"/>
		<propertyDefinition propertyName="ZGeometryField" label="${com.esri.ges.framework.adapter.text-adapter.Z_GEOM_FIELD_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.Z_GEOM_FIELD_DESC}" propertyType="String" defaultValue="" mandatory="false" readOnly="false" dependsOn="BuildGeometryFromFields=true"/>
		<propertyDefinition propertyName="WKIDGeometryField" label="${com.esri.ges.framework.adapter.text-adapter.WKID_GEOM_FIELD_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.WKID_GEOM_FIELD_DESC}" propertyType="String" defaultValue="" mandatory="false" readOnly="false" dependsOn="BuildGeometryFromFields=true"/>
		<propertyDefinition propertyName="WKTextGeometryField" label="${com.esri.ges.framework.adapter.text-adapter.WKT_GEOM_FIELD_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.WKT_GEOM_FIELD_DESC}" propertyType="String" defaultValue="" mandatory="false" readOnly="false" dependsOn="BuildGeometryFromFields=true"/>
		<propertyDefinition propertyName="CustomDateFormat" label="${com.esri.ges.framework.adapter.text-adapter.CUSTOM_DATE_FORMAT_LBL}" description="${com.esri.ges.framework.adapter.text-adapter.CUSTOM_DATE_FORMAT_DESC}" propertyType="String" defaultValue="" mandatory="false" readOnly="false"/>
	</propertyDefinitions>
</adapter>